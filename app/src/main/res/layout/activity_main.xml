<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/text_padding"
        android:paddingVertical="@dimen/text_padding"
        android:text="@string/my_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/text_padding"
        android:paddingVertical="@dimen/temp_padding"
        android:text="@string/date_created"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <ImageView
        android:id="@+id/hotdog_cat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/hotdogcat"
        android:contentDescription="@string/is_cat_with_hotdog"
        />

    <Button
        android:id="@+id/form_button"
        android:layout_height="@dimen/form_button_height"
        android:layout_width="@dimen/form_button_width"
        android:layout_centerHorizontal="true"
        android:text="@string/go_to_form_button"/>



</androidx.coordinatorlayout.widget.CoordinatorLayout>